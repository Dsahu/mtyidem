<h1>New convocatoriaunit</h1>

<% form_for(@convocatoriaunit) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :run_id, "Para la carrera:" %><br />
    <%= f.collection_select :run_id, @runs, :id, :name %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <!--<p>
    <%= f.label :ordernum %><br />
    <%= f.text_field :ordernum %>
  </p>-->
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', convocatoriaunits_path %>