<% @events.each do |event| %>
	<% if event.run_id && event.run_id > 0 %>
		<div class="tooltip_event" id="tooltip_<%=event.id%>">
			<table>
				<tr>
					<td>
						<a href="#" onClick="loadBoxyConvoc(<%=event.run_id%>)"><img src="<%=event.run.logophoto%>" /></a>
					</td>
					<td style="padding-top:20px; vertical-align:top;">
						<a class="tooltip_inside_link" href="#" onClick="loadBoxyConvoc(<%=event.run_id%>)"><strong><%=h event.run.name%></strong></a><br/><br/>
						<strong>Feacha</strong> <%=event.run.eventday.strftime("%d/%m/%Y")%><br/>
						<strong>Informes:</strong> <%=h event.phone%><br/>
						<strong>info@idemsport.com</strong>
					</td>
				</tr>
			</table>
		</div>
	<% end %>
<% end %>
