<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Organizator</th>
    <th>Idemserial</th>
    <th>Phone</th>
    <th>Location</th>
    <th>Visible</th>
    <th>When</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.description %></td>
    <td><%=h event.organizator_id %></td>
    <td><%=h event.idemserial %></td>
    <td><%=h event.phone %></td>
    <td><%=h event.location %></td>
    <td><%=h event.visible %></td>
    <td><%=h event.when %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

