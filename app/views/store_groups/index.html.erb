<h1>Listing store_groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @store_groups.each do |store_group| %>
  <tr>
    <td><%=h store_group.name %></td>
    <td><%=h store_group.description %></td>
    <td><%= link_to 'Show', store_group %></td>
    <td><%= link_to 'Edit', edit_store_group_path(store_group) %></td>
    <td><%= link_to 'Destroy', store_group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New store_group', new_store_group_path %>